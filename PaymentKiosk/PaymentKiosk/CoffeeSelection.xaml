        </Label>
        <Label x:Name="label1_Copy3" Content="($2.50)" HorizontalAlignment="Left" Margin="393,223,0,0" VerticalAlignment="Top" Width="76" FontFamily="Showcard Gothic" FontSize="21.333" Foreground="White">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="10" Direction="325"/>
            </Label.Effect>
        </Label>
        <CheckBox x:Name="checkBox" HorizontalAlignment="Left" Margin="213,292,0,0" VerticalAlignment="Top">
            <CheckBox.Effect>
                <DropShadowEffect ShadowDepth="10"/>
            </CheckBox.Effect>
        </CheckBox>
        <CheckBox x:Name="checkBox1" HorizontalAlignment="Left" Margin="440,292,0,0" VerticalAlignment="Top">
            <CheckBox.Effect>
                <DropShadowEffect ShadowDepth="10"/>
            </CheckBox.Effect>
        </CheckBox>

    </Grid>
</Window>
