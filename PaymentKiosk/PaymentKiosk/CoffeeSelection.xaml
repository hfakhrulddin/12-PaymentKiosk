                <DropShadowEffect ShadowDepth="10" Direction="325"/>
            </Label.Effect>
        </Label>
        <Label x:Name="label1_Copy1" Content="($1.50)" HorizontalAlignment="Left" Margin="216,223,0,0" VerticalAlignment="Top" Width="78" FontFamily="Showcard Gothic" FontSize="21.333" Foreground="White">
