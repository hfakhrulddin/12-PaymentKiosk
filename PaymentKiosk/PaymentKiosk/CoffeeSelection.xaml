<Window x:Class="PaymentKiosk.CoffeeSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaymentKiosk"
        mc:Ignorable="d"
        Title="CoffeeSelection" Height="450" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="file:///C:/div/Origin/12-PaymentKiosk/Resources/background.jpg" Opacity="0.75"/>
